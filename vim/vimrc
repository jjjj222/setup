function! IndentEnterInBrace()
    " Use with
    " set autoindent
    " inoremap <CR> <ESC>:call IndentEnterInBrace()<CR>
    if (getline('.')[col('.')-1] == "{")
        "execute "normal l\"_x"
        execute "normal o}"
        execute "normal Oq"
        execute "normal >>\"_x"
        call feedkeys("A", "n")
    else
        call feedkeys("a", "n")
        call feedkeys("\<CR>", "n")
    endif
endfunction

"------------------------------------------------------------------------------
"   after
"------------------------------------------------------------------------------
function! SourceVimAfter()
    let afterfile = $HOME . "/.vim/after/ftplugin/" . &filetype . ".vim"
    if filereadable(afterfile)
        exec "source " . afterfile
    endif
endfunction
call SourceVimAfter()

