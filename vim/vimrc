" plain text"
vmap <C-d> :call MakeAsComment()<CR><ESC>
function! MakeAsComment() range
    let line_ul = line("'<")
    let col_ul  = virtcol("'<")
    let line_lr = line("'>")
    let col_lr  = virtcol("'>")
    call cursor( line_lr, col_lr )
    execute "normal A */"
    call cursor( line_ul, col_ul )
    execute "normal I/* "
    execute "normal za"
endfunction

vmap <C-g> :call MakeMultiLineComment()<CR><ESC>
function! MakeMultiLineComment() range
    let cur_file = &filetype
    let l:comment_str = "//"
    if (cur_file == "vim")
        let l:comment_str = "\""
    elseif (cur_file == "perl")
        let l:comment_str = "#"
    endif

    let line_u = line("'<")
    let line_l = line("'>")
    let col_n = col(".")
    call cursor( line_u, col_n )
    execute "normal ^"
    let col_n = col(".")

    while line_u <= line_l
        call cursor( line_u, col_n )
        execute "normal ^"
        let col_cur = col(".")
        if (col_cur >= col_n)
            call cursor( line_u, col_n )
            execute "normal i" . l:comment_str
        endif
        let line_u = line_u + 1
    endwhile
endfunction

