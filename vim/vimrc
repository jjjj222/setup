nmap <leader>a :call AddHeader()<CR><ESC>
function! AddHeader()
    let curLine = line(".")
    call append(curLine + 0, "//------------------------------------------------------------------------------")
    call append(curLine + 1, "//   ")
    call append(curLine + 2, "//------------------------------------------------------------------------------")
endfunction

